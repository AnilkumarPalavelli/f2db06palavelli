extends layout 
 
block content 
  h1= title 
  if(toShow==null)
    h2 No instance to Detail
  else
 
   
    - let fishid = toShow._id 
    - let fish_type = toShow.fish_type
    - let fish_weight = toShow.fish_weight
    - let fish_cost = toShow.fish_cost 
    - let actionid = "/resource/fishes/" + fishid 
    script let actionid = "#{actionid}" 
    div 
      div.row
       div(class='fishAttr mr-3') Fish ID is:
       div #{fishid}
      div.row
       div(class='fishAttr mr-3') Fish type is:
       div #{fish_type}
      div.row
       div(class='fishAttr mr-3') Fish weight is:
       div #{fish_weight}
      div.row
       div(class='fishAttr mr-3') Fish cost:
       div #{fish_cost}
 
    button(class="btn btn-danger m-2" onclick="deleteOnid()") Delete 
    button(class="btn btn-secondary m-2" onclick="cancel()") Cancel 
 
  script. 
    function cancel() { 
      // Go back to the home page for the fish collection 
      window.location.href='/fish' 
    } 
  script. 
    function deleteOnid() { 
      console.log("starting delete") 
      // delete first 
      fetch(actionid, { 
        method: 'DELETE'     
      }).then((resp) => { 
        return resp.json(); // or resp.text() or whatever the server sends 
      }).then((body) => { 
        alert("Delete succeded") 
        window.location.href='/fish' 
        // TODO handle body 
      }).catch((error) => { 
        console.log(error);
        alert("Delete failed " + error ) 
      }); 
    } 